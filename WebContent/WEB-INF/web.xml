<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE web-app 
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" 
    "http://java.sun.com/dtd/web-app_2_3.dtd">

 <web-app>
   <display-name>Channel Subscription Servlets</display-name>
   
   <context-param>
     <param-name>BDBstore</param-name>
     <param-value>Desktop/database</param-value>
   </context-param>
    
   <servlet>
     <servlet-name>xpath</servlet-name>
     <servlet-class>edu.upenn.cis455.servlet.XPathServlet</servlet-class> 
   </servlet>
   
   <servlet>
   	 <servlet-name>signup</servlet-name>
   	 <servlet-class>edu.upenn.cis455.servlet.SignUpServlet</servlet-class>
   </servlet>

   <servlet>
   	 <servlet-name>login</servlet-name>
   	 <servlet-class>edu.upenn.cis455.servlet.LoginServlet</servlet-class>
   </servlet>
   
   <servlet>
   	 <servlet-name>logout</servlet-name>
   	 <servlet-class>edu.upenn.cis455.servlet.LogoutServlet</servlet-class>
   </servlet>
   
   <servlet>
   	 <servlet-name>channels</servlet-name>
   	 <servlet-class>edu.upenn.cis455.servlet.ChannelsServlet</servlet-class>
   </servlet>
   
   <servlet>
   	 <servlet-name>addchannel</servlet-name>
   	 <servlet-class>edu.upenn.cis455.servlet.AddChannelServlet</servlet-class>
   </servlet>
   
   <servlet>
   	 <servlet-name>deletechannel</servlet-name>
   	 <servlet-class>edu.upenn.cis455.servlet.DeleteChannelServlet</servlet-class>
   </servlet>
   
   <!-- Mappings -->
   
   <servlet-mapping>
     <servlet-name>xpath</servlet-name>
     <url-pattern>/xpath</url-pattern>
   </servlet-mapping>  
 
   <servlet-mapping>
     <servlet-name>signup</servlet-name>
     <url-pattern>/signup</url-pattern>
   </servlet-mapping>  

   <servlet-mapping>
     <servlet-name>login</servlet-name>
     <url-pattern>/login</url-pattern>
   </servlet-mapping>  
   
   <servlet-mapping>
     <servlet-name>logout</servlet-name>
     <url-pattern>/logout</url-pattern>
   </servlet-mapping>  
   
   <servlet-mapping>
     <servlet-name>channels</servlet-name>
     <url-pattern>/channels</url-pattern>
   </servlet-mapping>  
   
   <servlet-mapping>
     <servlet-name>addchannel</servlet-name>
     <url-pattern>/addchannel</url-pattern>
   </servlet-mapping>  
   
   <servlet-mapping>
     <servlet-name>deletechannel</servlet-name>
     <url-pattern>/delete/*</url-pattern>
   </servlet-mapping>  
   
</web-app>
